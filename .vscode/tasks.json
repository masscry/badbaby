  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build All (Debug)",
      "type": "shell",
      "command": "cmake --build ./.debug",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build 000hello (Debug)",
      "type": "shell",
      "command": "cmake --build ./.debug --target 000hello",
      "group": "build"
    },
    {
      "label": "Build 001render (Debug)",
      "type": "shell",
      "command": "cmake --build ./.debug --target 001render",
      "group": "build"
    },
    {
      "label": "Build All (Release)",
      "type": "shell",
      "command": "cmake --build ./.release --clean-first",
      "group": "build"
    },

  ]
}